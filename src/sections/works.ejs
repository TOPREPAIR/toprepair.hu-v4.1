<trb-section>
    <trb-stack>
        <trb-title level="2" class="trb-title--uppercasegrey">Munkáink</trb-title>
        <trb-form>
            <trb-stack style="gap:var(--trb-space--1)">
                <trb-label for="faq-category">Kategória</trb-label>
                <select 
                    name="works-category"
                    id="works-category"
                    category-target="works_category_target"
                    category-data-url="/cdn/data/works.json"
                >
                    <option value="all">Mind</option>
                    <option value="pdr">Horpadás javítás</option>
                    <option value="hdr">Jégkár javítás</option>
                </select>
            </trb-stack>
        </trb-form>
        <trb-grid id="works_category_target" class="trb-grid--boxes"></trb-grid>
        <trb-paragraph>További munkáinkért kérjük látogasson el <trb-anchor href="https://facebook.com/toprepairhungary">facebook oldalunkra</trb-anchor>, vagy <trb-anchor href="https://maps.google.com/maps?cid=10727131549895732878&hl=hu">google oldalunkra</trb-anchor>.</trb-paragraph>
    </trb-stack>
    <script>

        document.getElementById('works-category').viewTemplate = `
            <trb-work format="{{format}}" src="{{src}}"></trb-work>
        `;

    </script>
    <script type="module">
        // set accodringly in production
        import '<%= trbUrl %>/components/trb-work.js';

    </script>
</trb-section>